<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.2"/>
    </startup>
    <appSettings>
		<!-- Настройки -->
		<!-- 
			Тип запуска поиска:
			1. по таймеру
			2. по крону
			По умолчанию: 1
		-->
		<add key="startType" value="2"/>
		
		<!-- 
			Интервал запуска поиска при выборе типа запуска по таймеру(1). 
			По умолчанию: каждые 15 мин.
		-->
		<add key="timerInterval" value="15"/>
		
		<!-- 
			Время запуска поиска при выборе типа запуска по крону(2). 
			По умолчанию: каждые 15 мин.
		-->
		<add key="crontab" value="*/5 * * * *"/>
	
		<!-- 
			Директория(ии) поиска.
			Пример: C:\|D:\
			Символ '|' является разделителем.
		-->
		<add key="searchDirectory" value="E:\"/>

		<!-- 
			Директориия(ии) исключенные из поиска. Проверяется вхождение строк, 
			т.е. если использовать значение "Windows" все директории с данной строкой будут исключены.
			Пример: C:\Windows|D:\Downloads
			Символ '|' является разделителем.
		-->
		<add key="exceptDirectory" value="C:\Windows|C:\Program Files (x86)|C:\Program Files|C:\AppData|C:\AppData"/>
		
		<!-- 
			Выполнять поиск в текущей директории и во всех поддиректориях или только в текущей директории. 
			Варианты: 0 или 1
			По умолчанию: 1 (в текущией и в поддиректориях)
		-->
		<add key="searchOption" value="1"/>
	
		<!-- 
			Маска поиска.
			Пример: file_name_1*.exe|file_name_2*.dll
			Символ '|' является разделителем.
		-->
		<add key="searchMask" value="d_*.pdf"/>
		
		<!-- 
			Директория файла с результатами поиска.
			Путь может быть относительным или абсолютным.
		-->
		<add key="outputFilePath" value="SearchResults.txt"/>

		<!-- 
			Метод поиска.
			Варианты:
			1. Стандартными средствами
			2. Обертка над методами WinAPI (Версия #1)
			3. Обертка над методами WinAPI (Версия #2)
			По умолчанию: 1
		-->
		<add key="searchMethod" value="3"/>
		
		<!-- 
			Использовать параллельные вычисления. Поиск ведется быстрее, но с большей нагрузкой на ЦП.
			Актуально только при поиске по нескольким маскам (разденных символом '|').
			Варианты: 0 или 1
			По умолчанию: 1
		-->
		<add key="searchParallel" value="1"/>

		<!-- 
			Удалять найденные файлы.
			Варианты: 0 или 1
			По умолчанию: 0
		-->
		<add key="deleteFiles" value="1"/>
    </appSettings>
</configuration>
